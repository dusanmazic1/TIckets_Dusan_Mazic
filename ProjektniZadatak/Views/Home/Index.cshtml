@using ProjektniZadatak.Models

@model List<Manifestacija>

@{
    ViewBag.Title = "Home page";
}

<br />
<form action="~/Manifestacija/Sortiraj">
        <input type="text" name="naziv" placeholder="Naziv" />
        <input type="text" name="mesto" placeholder="Grad" />
        <input type="date" name="datumOd" placeholder="Od" />
        <input type="date" name="datumDo" placeholder="Do" />
        <input type="number" name="cenaOd" placeholder="Cena Od" min="0" />
        <input type="number" name="cenaDo" placeholder="Cena Do" min="0" />
        <input type="submit" value="Pretrazi" />
    </form>

<a href="/Home/Index" class="btn button">Reset</a>

<table border="0" , class="table table-hover">
    <tr>
        <th>Naziv</th>
        <th>Tip Manifestacije</th>
        <th>Broj karata</th>
        <th>Vreme odrzavanja</th>
        <th>Cena karte</th>
        <th>Status</th>
        <th>Mesto odrzavanja</th>
        <th></th>
    </tr>

    @foreach (Manifestacija m in Model)
    {
        <tr>
            <td>@m.Naziv</td>
            <td>@m.TipManifestacije</td>
            <td>@m.BrojMesta</td>
            <td>@m.Vreme</td>
            <td>@m.CenaRegular</td>
            <td>@m.Status</td>
            <td>@m.Mesto.Grad</td>
            @*<td>
                    <form action="~/Manifestacija/Detaljnije">
                        <input type="text" name="naziv" value="@m.Naziv" hidden />
                        <input type="submit" value="Detaljnije" />
                    </form>
                </td>*@

        </tr>
    }


</table>

